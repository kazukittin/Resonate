{
  "extends": "@electron-toolkit/tsconfig/tsconfig.node.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ],
      "@common/*": [
        "src/common/*"
      ]
    }
  },
  "include": [
    "src/main/**/*",
    "src/preload/**/*",
    "src/renderer/src/**/*",
    "electron-vite.config.ts"
  ]
}